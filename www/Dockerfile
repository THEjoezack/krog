FROM node:10.15.1-alpine AS build

ENV DOCKER=TRUE
ENV NPM_CONFIG_LOGLEVEL error

WORKDIR /app
COPY . /app

RUN npm install

ARG REACT_APP_OKTA_OAUTH2_ISSUER
ARG REACT_APP_OKTA_CLIENT_ID
ARG REACT_APP_API_ENDPOINT
ARG REACT_APP_GRAPHQL_ENDPOINT

ENV REACT_APP_OKTA_OAUTH2_ISSUER=$REACT_APP_OKTA_OAUTH2_ISSUER
ENV REACT_APP_OKTA_CLIENT_ID=$REACT_APP_OKTA_CLIENT_ID
ENV REACT_APP_API_ENDPOINT=$REACT_APP_API_ENDPOINT
ENV REACT_APP_GRAPHQL_ENDPOINT=$REACT_APP_GRAPHQL_ENDPOINT

RUN npm run build

FROM nginx:1.17.8-alpine

COPY --from=build /app/build /usr/share/nginx/html
RUN rm /etc/nginx/conf.d/default.conf
COPY nginx.conf /etc/nginx/conf.d
EXPOSE 3000

CMD ["nginx", "-g", "daemon off;"]
